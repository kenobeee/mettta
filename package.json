{
  "name": "ttt-meta",
  "version": "0.1.0",
  "description": "Electron + Vite + TypeScript + Rapier2D starter",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"tsc -p tsconfig.node.json --watch\" \"vite --clearScreen false\" \"wait-on http://localhost:5173 && electron dist-electron/main.js\"",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.node.json",
    "build": "npm run build:main && npm run build:renderer",
    "start": "NODE_ENV=production electron .",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint \"{src,electron}/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@dimforge/rapier2d-compat": "^0.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "concurrently": "^8.2.0",
    "electron": "^30.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
